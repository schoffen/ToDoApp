<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemTagRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:background="@drawable/background_tag_green"
    android:paddingHorizontal="10dp"
    android:paddingVertical="2dp">

    <TextView
        android:id="@+id/itemTagName"
        style="@style/TextViewBlueNormal"
        android:paddingHorizontal="8dp"
        android:text="@string/tag_placeholder"
        android:textColor="@color/tag_text_green"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>